@model shabat2.ViewModel.VMAddCategory

@{
    ViewData["Title"] = "AddCategory";
}

<h1>הוספת קבוצה חדשה</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <input type="button" value="הוסף מאכל לקבוצה" onclick="addFood()" />
            <div id="food" style="display:none">
                <div class="form-group">
                    <label asp-for="Food" class="control-label"></label>
                    <input asp-for="Food" class="form-control" />
                    <span asp-validation-for="Food" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FoodFile" class="control-label"></label>
                    <input asp-for="FoodFile" class="form-control" />
                    <span asp-validation-for="FoodFile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="הוספת קבוצה" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">חזרה לרשימה</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
